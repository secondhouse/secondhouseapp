<div class="space">
</div>
<!--------全体のdiv------------>
<div class="show_wrapp_seen">

<!--------カバー画像------------>
    <% if @seen.image_header %>
    <div class="show_wrapp_cover">
        <img class="image_header" src="<%= "/images_header/#{@seen.image_header}" %>" alt="">
    </div>
    <% else %>
        <div class="space"></div>
    <% end %>
<!--------ここまでカバー画像------------>
    <div class="info_wrapp_seen11">
<!--------ユーザー情報------------>
    <div class="info_wrapp_seen">
        <% if @seen.image_name %>
            <div class="icon_wrapp">
                <div class="users_icon_seen">
                    <img class="icon_img" src="<%= "/user_images/#{@seen.image_name}" %>" alt="">
                </div>
            </div>
        <% else %>
            <div class="icon_wrapp">
                <div class="users_icon_seen">
                    <i class="fas fa-user-circle fa-7x icon_color"></i>
                    <div class="icon_add">
                        <i class="fas fa-camera fa-2x icon_camera2"></i>
                        <i class="fas fa-plus icon_plus2"></i>
                    </div>
                </div>
            </div>
        <% end %>
<!------ユーザー名-------------------------------------->
        <div class="user_info">
            <div class="show_user_name">
                <div class="name_user">
                    <%= @seen.name %>
                </div>

<!------フォローボタン-------------------------------------->
                <% if @seen.id == @user.id %>

                <% else %>
                    <% if @follow %>
                        <%= form_tag("/users/un_follow/#{@seen.id}") do %>
                            <form class="flollo_btn" action="index.html" method="post">
                                <div id="no_ma" class="support_button edit_button1 move22 chage_move">
                                    <input name="follow" type="radio" value="0"/>
                                    <label for="fol_submit11">
                                        <p><i class="fas fa-user-check move33"></i>フォロー中</p>
                                    </label>
                                    <input id="fol_submit11" type="submit" value=""/>
                                </div>
                            </form>
                        <% end %>

                    <% else %>
                        <%= form_tag("/users/follow/#{@seen.id}") do %>
                            <form class="flollo_btn" action="index.html" method="post">
                                <div id="no_ma" class="support_button edit_button1 move22 chage_move">
                                    <input name="follow" type="radio" value="1"/>
                                    <label for="fol_submit">
                                        <p><i class="fas fa-user-plus move33"></i>フォローする</p>
                                    </label>
                                    <input id="fol_submit" type="submit" value=""/>
                                </div>
                            </form>
                        <% end %>
                    <% end %>
                <% end %>
<!------ここまでフォローボタン----------------------------->
            </div>

            <div class="edit_wrapp">
                <div class="show_user_sex">
                    <p><%= @seen.sex %>/<%= @year %>歳</p>
                </div>
                <% if @user.id != @seen.id %>
                    <%= link_to("/users/seen/direct_message/#{@seen.id}") do %>
                    <div class="support_button edit_button" id="send_me">
                        <p>メッセージを送る</p>
                    </div>
                    <% end %>
                <% end %>
            </div>

            <div class="user_details_wrapp_seen">
                <div class="show_user_details">
                    <p class="detail_performance">実績</p>
                    <%= link_to("/users/seen/seen_evaluation/#{@seen.id}") do %>
                        <div class="seen_containar">
                            <p class="detail_move1">評価</p>
                            <% if @user_evaluation.nan? %>
                                <i class="fas fa-star"></i>
                                <p class="detail_move">-</p>
                            <% else %>
                                <i class="fas fa-star"></i>
                                <p class="detail_move"><%= @user_evaluation %></p>
                            <% end %>
                        </div>
                    <% end %>
                    <p class="detail_move1">フォロワー</p>
                    <p class="detail_move"><%= @num_follow %></p>
                    <p class="detail_move1">利用回数</p>
                    <p><%= @num %></p>
                </div>

                <div class="show_user_details">
                    <p class="detail_performance">認証状況</p>
                    <p class="detail_move1">本人確認</p>
                    <% if @user_detail %>
                        <% if @user_detail.approval == 1 %>
                            <i class="fas fa-user-circle human no_pa no_ma"></i>
                            <p class="check_fin"><i class="fas fa-check-square no_pa no_ma2 ma"></i></p>
                        <% else %>
                            <i class="fas fa-user-circle human  no_pa no_ma"></i>
                            <p class="">ー</p>
                        <% end %>
                    <% else %>
                            <i class="fas fa-user-circle human no_pa no_ma"></i>
                            <p class="">ー</p>
                    <% end %>

                    <p class="detail_move1" id="details_pay">お支払い方法</p>
                        <% if @user_detail %>
                            <% if @user_detail.pay == 1 %>
                                <i class="far fa-credit-card"></i>
                                <p class="check_fin"><i class="fas fa-check-square no_pa no_ma2 ma" id="show_check"></i></p>
                            <% else %>
                                <i class="far fa-credit-card"></i>
                                <p class="detail_move">ー</p>
                            <% end %>
                        <% else %>
                            <i class="far fa-credit-card"></i>
                            <p class="detail_move">ー</p>
                        <% end %>
                        <p class="detail_move1">受け取り口座</p>
                        <% if @bank %>
                            <i class="fas fa-money-check-alt"></i>
                            <p class="check_fin"><i class="fas fa-check-square no_pa no_ma2 ma" id="show_check"></i></p>
                        <% else %>
                            <i class="fas fa-money-check-alt"></i>
                            <p>ー</p>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% if @status %>
        <div class="introduction1_wrap">
            <div class="introduction55" id="intro_user22">
                <p><%= @status.introduction %></p>
            </div>
        </div>
    <% else %>
        <div class="introduction1_wrap">
            <div id="introduction333">
                <p>紹介文はまだ設定されていません。</p>
            </div>
        </div>
    <% end %>

<!--------ここまでユーザー情報------------>
<!--------ドッグ情報------------>
    <% if @dog %>
        <% @dogs.each do | dog | %>

            <div class="info_wrapp_dog">
                <div class="">
                    <div class="icon_move1" id="icon_move1">
                        <% if dog.image_name %>
    <!--------アイコンあり------------>
                            <div class="icon_wrapp">
                                <div class="users_icon_seen" id="dog_seen2">
                                    <img class="icon_img" src="<%= "/dog_images/#{dog.image_name}" %>" alt="">
                                </div>
                            </div>
                        <% else %>
    <!--------アイコンなし------------>
                            <div class="dog_icon_mydog" id="dog_seen">
                                <i id="seen_dog_icon" class="fas fa-dog fa-5x fa-dog11"></i>
                            </div>
                        <% end %>
  <!--------ドッグ詳細------------>
                        <div class="dog_info">

                            <div class="show_user_name">
                                <%= dog.name %>
                            </div>

                            <div class="seen_info">
                                <div class="show_user_sex">
                                    <%= "#{dog.sex}/年齢" %>
                                </div>
                            </div>

                            <div class="user_details_wrapp">
                                <div class="show_user_details">
                                    <p class="detail_performance">ワンちゃん基本情報</p>
                                </div>

                                <div class="show_user_details">
                                    <p class="detail_move1">・犬種：</p>
                                    <p class="detail_move"><%= dog.dog_breed %></p>
                                    <p class="detail_move1">・体重：</p>
                                    <p class="detail_move1"><%= dog.weight %></p>
                                    <p class="">・去勢/避妊手術：</p>
                                    <p class="detail_move"><%= dog.castration %></p>
                                    <p class="">・狂犬病ワクチン：</p>
                                    <p><%= dog.rabies %></p>
                                </div>

                                <div class="show_user_details">
                                    <p class="detail_performance">性格</p>
                                </div>

                                <div class="show_user_details1">
                                    <p><%= dog.character %></p>
                                </div>
                            </div>

                        </div>
                    </div>
<!--------ここまでドッグ詳細------------>
<!--------ドッグ詳細文------------>
                    <% @info = Information.find_by(dog_id: dog.id) %>
                    <% if @info %>
                        <div class="introduction1_wrap">
                            <div class="introduction55" id="intor_dog22">
                                <div class="box">
                                    <p><%= @info.introduction %></p>
                                </div>
                            </div>
                        </div>
                    <% else %>
                        <div class="introduction1_wrap">
                            <div id="introduction3331">
                                <p>紹介文はまだ設定されていません。</p>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
    <% else %>
    <% end %>
<!--------ここまでドッグ詳細文------------>
</div>
</div>
