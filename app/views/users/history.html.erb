<div class="space">
</div>

<div class="evaluation_show">

    <div class="users_header">
        <div class="users_header1">
            <ul>
              <%= link_to("ホーム","/users/#{@user.id}") %>
              <%= link_to("ワンちゃんプロフィール","/users/mydog/#{@user.id}") %>
              <%= link_to("預かり依頼/エントリー","/users/rely/#{@user.id}") %>
              <%= link_to("評価","/users/evaluation/#{@user.id}") %>
              <%= link_to("利用履歴","/users/history/#{@user.id}") %>
          </ul>
        </div>
    </div>
    <div class="evaluation_wrapp">
        <div class="profile">
<!------------------アイコンの有無---------------------->
            <% if @user.image_name %>
                <div class="icon_wrapp_evaluation">
                    <div class="users_icon">
                        <img class="icon_img" src="<%= "/user_images/#{@user.image_name}" %>" alt="">
                    </div>
                </div>
            <% else %>
                <div class="icon_wrapp_evaluation">
                    <div class="users_icon">
                        <%= link_to("/users/edit/#{@user.id}") do %>
                            <i class="fas fa-user-circle fa-8x icon_color"></i>
                            <div class="icon_add">
                                <i class="fas fa-camera fa-2x icon_camera2"></i>
                                <i class="fas fa-plus icon_plus2"></i>
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
<!------------------ここまでアイコンの有無---------------------->
<!------------------左側メニュー------------------------------->
            <div class="evaluation_name">
                <%= @user.name %>
            </div>
            <div class="evaluation_edit">
                <%= link_to("/users/edit/#{@user.id}") do %>
                    <div class="evaluation_button">
                        <p>基本情報を編集する</p>
                    </div>
                <% end %>
                <%= link_to("/users/seen/#{@user.id}") do %>
                    <div class="evaluation_button1">
                        <p>自分のページを見る</p>
                    </div>
                <% end %>
            </div>

            <div class="evaluation_info">
                <h4>実績</h4>
                <div class="evaluation_containar move_m">
                    <p>利用回数</p>
                    <p class="elacement"><%= @num %></p>
                </div>
                <div class="evaluation_containar">
                    <p>評価</p>
                    <div class="">
                        <% if @user_evaluation.nan? %>
                            <p><i class="fas fa-star move_star"></i>ー</p>
                        <% else %>
                            <i class="fas fa-star move_star"></i>
                            <%= @user_evaluation %>
                        <% end %>
                    </div>
                </div>
                <div class="evaluation_containar">
                    <p>フォロワー</p>
                    <p><%= @num_follow %></p>
                </div>
            </div>

            <div class="detaile_pro">
                <h4 class="">認証状況</h4>
                <div class="detaile_pro_move">
                    <p class="id_detail">本人確認</p>
                    <% if @user_detail %>
                        <% if @user_detail.approval == 1 %>
                            <i class="fas fa-user-circle human no_pa no_ma" id="user_icon_ma"></i>
                            <p class="check_fin"><i class="fas fa-check-square no_pa no_ma2 ma"></i></p>
                        <% else %>
                            <i class="fas fa-user-circle human  no_pa no_ma"></i>
                            <p class="">ー</p>
                        <% end %>
                        <% else %>
                            <i class="fas fa-user-circle human no_pa no_ma"></i>
                            <p class="">ー</p>
                    <% end %>
                </div>
                <div class="detaile_pro_move">
                    <p class="id_detail">受け取り口座</p>
                    <% if @bank %>
                        <i class="far fa-credit-card move_card no_pa no_ma2 ma" id="bank_fin"></i>
                        <p class="check_fin"><i class="fas fa-check-square no_pa no_ma2 ma"></i></p>
                    <% else %>
                        <i class="far fa-credit-card move_card no_pa no_ma2 ma" id="bank_fin"></i>
                        <p class="">ー</p>
                    <% end %>
                </div>
                <div class="detaile_pro_move">
                    <p class="id_detail">お支払い方法</p>
                    <% if @user_detail %>
                        <% if @user_detail.pay == 1 %>
                            <i class="fas fa-money-check-alt no_pa no_ma2 ma" id="id_card"></i>
                            <p class="check_fin"><i class="fas fa-check-square no_pa no_ma2 ma"></i></p>
                        <% else %>
                            <i class="fas fa-money-check-alt no_pa no_ma2 ma" id="id_card"></i>
                            <p>ー</p>
                        <% end %>
                    <% else %>
                        <i class="fas fa-money-check-alt no_pa no_ma2 ma" id="id_card"></i>
                        <p>ー</p>
                    <% end %>
                </div>
            </div>
        </div>
<!------------------ここまで左側メニュー------------------------>
<!-----利用履歴-------------------------------------->
        <div class="evaluation_content1">
            <div class="evaluation_content">
                <h3>利用履歴</h3>
                <% if @num == 0 %>
                <% else %>
                    <% @histories.each do | history | %>
                        <%
                           @request = Request.find_by(id: history.request)
                            if @request.user_id == history.user_id && history.user_id == @user.id
                                @partner = User.find_by(id: history.partner)
                                @servise = "ワンちゃんを預かってもらった"
                                @evaluation = Evaluation.find_by(request_id: @request.id)
                                @overall = @evaluation.overall
                            else
                                @partner = User.find_by(id: history.user_id)
                                @servise = "ワンちゃんを預かった"
                                @storage = Storage.find_by(request_id: @request.id)
                                @overall = @storage.overall
                            end
                        %>
                        <div class="user_containar000">
                            <div class="icon_wrapp000">
                                <% if @partner.image_name %>
                                    <%= link_to("/users/seen/#{@partner.id}") do %>
                                        <div class="users_icon">
                                            <img class="icon_img" src="<%= "/user_images/#{@partner.image_name}" %>" alt="">
                                        </div>
                                    <% end %>
                                <% else %>
                                    <div class="users_icon000">
                                        <%= link_to("/users/seen/#{@partner.id}") do %>
                                            <i class="fas fa-user-circle fa-8x icon_color" id="history"></i>
                                            <div class="icon_add">
                                                <i class="fas fa-camera fa-2x icon_camera2" id="history2"></i>
                                                <i class="fas fa-plus icon_plus2" id="history3"></i>
                                            </div>
                                        <% end %>
                                    </div>
                                <% end %>
                                <p class="no_icon"><%= @partner.name %></p>
                            </div>


  <!-----user_containar要素2-------------------------------------->
                            <%= link_to("/dog/details/#{@request.id}") do %>
                                <div class="history_date">
                                    <div class="history_item">
                                        <p><i class="fas fa-check-circle"></i>評価完了日</p>
                                        <p><%= history.created_at.year %>年<%= history.created_at.month %>月<%= history.created_at.day %>日</p>
                                    </div>
                                    <div class="history_item">
                                        <p><i class="fas fa-check-circle"></i>依頼内容</p>
                                        <p><%= @servise %></p>
                                    </div>
                                    <div class="history_item">
                                        <p><i class="fas fa-check-circle"></i>相手からの評価</p>
                                        <p><%= @overall %></p>
                                    </div>
                                </div>
                            <% end %>
  <!-----user_containar終了-------------------------------------->
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
<!--スマホ-->
<div class="history_s">
    <div class="evaluation_head">
        <h1>利用履歴</h1>
    </div>
    <% if @num == 0 %>
        <div class="no_history">
            <p>まだ利用履歴はありません</p>
        </div>
    <% else %>
        <% @histories.each do | history | %>
    <!-----アイコン画像有無-------------------------------------->
            <%
               @request = Request.find_by(id: history.request)

               if @request.user_id == history.user_id && history.user_id == @user.id
                    @partner = User.find_by(id: history.partner)
                    @servise = "預かってもらった"
                    @evaluation = Evaluation.find_by(request_id: @request.id)
                    @overall = @evaluation.overall
                else
                    @partner = User.find_by(id: history.user_id)
                    @servise = "ワンちゃんを預かった"
                    @storage = Storage.find_by(request_id: @request.id)
                    @overall = @storage.overall
                end
            %>
            <div class="user_containar000_s">
                <div class="icon_name">
                    <%= link_to("/users/seen/#{@partner.id}") do %>
                        <div class="icon_wrapp000_s" id="">
                            <% if @partner.image_name %>
                                <img id="icon_img" class="icon_img" src="<%= "/user_images/#{@partner.image_name}" %>" alt="">
                            <% else %>
                                <i class="fas fa-user-circle fa-4x icon_color" id="history_s"></i>
                            <% end %>
                        </div>
                    <% end %>
                </div>
                <div class="">
                    <div class="item_s">
                        <p class="no_icon_s"><%= @partner.name %></p>
                        <div id="history_item">
                            <p><i class="fas fa-check-circle"></i>評価完了日</p>
                            <p><%= history.created_at.year %>年<%= history.created_at.month %>月<%= history.created_at.day %>日</p>
                        </div>
                    </div>
                    <div class="history_item_s" id="history_item">
                        <p><i class="fas fa-check-circle"></i>依頼内容</p>
                        <p><%= @servise %></p>
                    </div>
                    <div class="history_item_s" id="history_item">
                        <p><i class="fas fa-check-circle"></i>相手からの評価</p>
                        <p><%= @overall %></p>
                    </div>

                </div>
            </div>
        <% end %>
    <% end %>
</div>
